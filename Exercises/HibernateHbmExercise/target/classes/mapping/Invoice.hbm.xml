<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.chandrika.models.Invoice" table="INVOICE">
		<id name="id" column="INVOICE_ID">
			<generator class="increment"></generator>
		</id>
		<property name="invdate" type="org.hibernate.type.DateType" column="INVOICE_DATE"></property>
		<property name="amount" type="org.hibernate.type.DoubleType" column="INVOICE_AMOUNT"></property>
		<many-to-one name="customer" column="CUSTOMER_ID" class="com.chandrika.models.Customer"></many-to-one>
	</class>
</hibernate-mapping>