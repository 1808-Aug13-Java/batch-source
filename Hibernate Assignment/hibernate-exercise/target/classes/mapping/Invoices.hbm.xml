<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.revature.models.Invoices">
		<id name="InvoiceId" column="INVOICE_ID">
	<generator class="increment"></generator>
</id>
	<property name="date" type ="org.hibernate.type.DateType"	column="CUSTOMER_NAME"></property>
	<property name="amount" ></property>
<!-- you don't have to specify column name if you want the column name to be the name attribute -->
	<!-- name in many to one is the attribute -->
</class>
</hibernate-mapping>