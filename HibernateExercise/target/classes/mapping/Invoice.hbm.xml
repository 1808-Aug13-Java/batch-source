<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.revature.models.Invoice" table="HBM_INVOICE">
		<id name="id" column="INVOICE_ID">
			<generator class="increment"></generator>
		</id>
		<property name="invDate"></property>
		<property name="amount"></property>
		<many-to-one name="cust_id" column="CUST_ID" class="com.revature.models.Customer"></many-to-one>
	</class>
</hibernate-mapping>