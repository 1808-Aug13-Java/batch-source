<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name = "com.revature.models.Invoice"  table  = "INVOICE">
		<id name = "id" column = "INVOICE_ID">
			<generator class = "increment"></generator>
		</id>
		<property name = "customer" type = "org.hibernate.type.IntegerType" column = "CUSTOMER_ID"></property>
		<property name = "date" type = "org.hibernate.type.DateType" column = "INV_DATE" ></property>
		<property name = "amount" type = "org.hibernate.type.FloatType" column = "AMOUNT" ></property>
	</class>
</hibernate-mapping>