<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.revature.models.Invoice">
		<id name="invoiceId" column="INVOICE_ID">
			<generator class="increment"></generator>
		</id>
		<property name="invoiceDate" type="org.hibernate.type.DateType" column="INVOICE_DATE"></property>
		<one-to-one name="customer" class="com.revature.models.Customer" cascade="save-update"></one-to-one>

		<property name="amount" type="org.hibernate.type.BigDecimalType" column="AMOUNT"></property>
	</class>
</hibernate-mapping>	