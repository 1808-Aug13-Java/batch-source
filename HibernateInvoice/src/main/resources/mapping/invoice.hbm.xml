<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.revature.models.Invoice" table="HBM_INVOICE">
		<id name="invoiceId" column="VOICE_ID">
			<generator class="increment"></generator>
		</id> 
		<property name="date" type="org.hibernate.type.DateType" column="VOICE_DATE"></property>
		<property name="amount" type="org.hibernate.type.FloatType" column="CUST_PHONE"></property>
	
		<many-to-one name="customerId" column="CUST_ID" class="com.revature.models.Customer"></many-to-one>
	
	</class>

</hibernate-mapping>

